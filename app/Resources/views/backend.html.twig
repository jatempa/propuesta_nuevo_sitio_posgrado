{% extends '::base.html.twig' %}

{% block title %}Administración{% endblock %}
        
{% block stylesheets %}
{% stylesheets '@BackEndBundle/Resources/public/css/kube.css'
               '@BackEndBundle/Resources/public/css/master.css'
               filter='yui_css' %}
  <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block header %}
    <header id="header">
        <nav class="nav-g">
            <ul>
                <li><a href="{{ path('alumnos') }}">Alumnos</a></li>
                <li><a href="{{ path('areas') }}">Áreas de inv.</a></li>
                <li><a href="{{ path('investigadores') }}">Investigadores</a></li>
                <li><a href="{{ path('lineas') }}">Líneas de inv.</a></li>
                <li><a href="{{ path('productosacademicos') }}">Prod. académicos</a></li>
                <li><a href="{{ path('posgrados') }}">Posgrados</a></li>
                <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
            </ul>
        </nav>
    </header>
    <div class="units-row">
        <nav class="breadcrumbs">
            <ul>
                {% block mapa %}
                    <li><span>Inicio</span></li>
                {% endblock %}
            </ul>
        </nav>                
    </div>
{% endblock %}

{% block body %}
    <div>
        <div class="units-row">
            {% block lateral %}
            {% endblock %}
            {% block contenido %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer id="footer">&copy; Instituto Tecnológico de Mexicali.</footer>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/backend/js/kube.css') }}"></script>
{% endblock %}
