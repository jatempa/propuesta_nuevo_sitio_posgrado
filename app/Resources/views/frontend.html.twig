{% extends '::base.html.twig' %}

{% block stylesheets %}
<link href='http://fonts.googleapis.com/css?family=Droid+Sans|Convergence|Amaranth' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Oxygen:400,700' rel='stylesheet' type='text/css'>
{% stylesheets '@PortadaBundle/Resources/public/css/foundation.css'
               '@PortadaBundle/Resources/public/css/master.css'
               filter='yui_css' %}
  <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
  <!-- JavaScripts -->
  <script src="{{ asset('bundles/portada/js/vendor/custom.modernizr.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/vendor/zepto.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/vendor/jquery.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/foundation.min.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/foundation/foundation.topbar.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/foundation/foundation.orbit.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/foundation/foundation.section.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/foundation/foundation.reveal.js') }}"></script>
  <script src="{{ asset('bundles/portada/js/master.js') }}"></script>
  <script>
    $(document).foundation();
  </script>
  {% block funcionesjs %}{% endblock %}
{% endblock %}

{% block header %}
    <!-- Header -->
    <div class="row">    
      <div class="large-7 columns">
          <img src="{{ asset('bundles/portada/img/header.png') }}"/>
      </div>
      <div class="large-5 columns">
          <div class="titulo">División de estudios de Posgrado e Investigación</div>
      </div> 
    </div> 
    <!-- Banner -->
    <div class="row">
      <div class="large-12 columns">    
        <ul id="banner" data-orbit>
          {% for imagen in banner %}
            <li><img src="{{ asset('uploads/images/portada/') ~ imagen.imagenBanner }}"/></li>
          {% endfor %}
        </ul>
      </div> 
    </div>
    <!-- Menu -->
    <div class="row">
      <div class="large-12 columns"> 
        <!-- Nav Wrap -->
        <nav class="top-bar">
            <ul class="title-area">
            <!-- Title Area -->
              <li class="name"></li>
              <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
            </ul>
            <!-- The Section wrap -->
            <section class="top-bar-section">
              <!-- Left Nav Section -->
              <ul class="right">
                  <li><a href="{{ path('sitio') }}">Inicio</a></li>
                    <li class="has-dropdown">
                      <a href="#">Investigación</a>
                        <ul class="dropdown">
                          <li><a href="{{ path('alumnos_public') }}">Alumnos</a></li>
                          <li><a href="{{ path('areas_public') }}">Áreas de investigación</a></li>
                          <li><a href="{{ path('investigadores_public') }}">Investigadores</a></li>
                          <li><a href="{{ path('lineas_public') }}">Líneas de investigación</a></li>
                        </ul>
                    </li>
                    <li>
                      <a href="{{ path('directorio') }}">Directorio</a>
                    </li>
              </ul>
            </section>
        </nav>
      </div> 
    </div>
    <!-- Menu -->
    <div class="row">
      <ul class="breadcrumbs large-12 columns">
        {% block mapa %}
          <li class="unavailable">Inicio</li>
        {% endblock %}
      </ul>
    </div>   
{% endblock %}

{% block body %}
    <!-- Contenido --> 
    <div class="row">
      <div class="large-12 columns">
        {% block contenido %}{% endblock %}
      </div> 
    </div>   
{% endblock %}

{% block footer %}
<!-- Enlaces -->
<footer class="row">
  <div class="large-12 columns">
    <div class="small-4 large-4 columns">
      <a href="http://www.snit.mx/">
        <center><img src="{{ asset('bundles/portada/img/dgest.png') }}" /></center>
      </a>
    </div>
                
    <div class="small-4 large-4 columns">
      <a href="http://www.conacyt.gob.mx/Paginas/InicioNueva.aspx">
        <center><img src="{{ asset('bundles/portada/img/conacyt.png') }}" /></center>
      </a>
    </div>
                    
    <div class="small-4 large-4 columns">
      <a href="http://ieeexplore.ieee.org/Xplore/home.jsp">
        <center><img src="{{ asset('bundles/portada/img/ieee.png') }}" /></center>
      </a>
    </div>
  </div>
    
  <div id="pie" class="small-12 large-12 columns">
    <img src="{{ asset('bundles/portada/img/footer.svg') }}"/>
  </div>
</footer>
{% endblock %}
