{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
    <li><a href="{{ path('proyectosproductos') }}">Proyectos y Prod. académicos</a></li>
    <li><span>Registro de un prod. académicos de un proyecto</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Proyectos y Prod. académicos</legend>
                {{ form_start(form, { 'attr': {'class': 'forms forms-columnar'} }) }}
                    
                    <p>
                        {{ form_label(form.proyecto, 'Proyecto *') }}
                        {{ form_widget(form.proyecto, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.productoAcademico, 'Producto académico *') }}
                        {{ form_widget(form.productoAcademico, { 'attr': {'class': 'width-100'} }) }}
                    </p>                    

                    <p>
                        {{ form_label(form.cantidad, 'Cantidad') }}
                        {{ form_widget(form.cantidad, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.fechaCumplimiento, 'Fecha de cumplimiento') }}
                        {{ form_widget(form.fechaCumplimiento, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.observaciones, 'Observaciones') }}
                        {{ form_widget(form.observaciones, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-blue'} }) }}
                    </p>
                {{ form_end(form) }}
            </fieldset>
        </div>
    </div>
</div>
{% endblock %}