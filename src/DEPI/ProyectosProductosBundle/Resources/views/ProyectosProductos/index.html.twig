{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
    <li><span>Proyectos y Prod. acad√©micos</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-centered unit-80">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Proyecto</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-40 enlace" >
                        <a href="{{ path('proyectosproductos_edit', { 'id': entity.id }) }}">
                            {{ entity.nombreCorto }}
                        </a>
                    </td>
                    <td class="width-30 enlace" >
                        <a href="{{ path('proyectosproductos_edit', { 'id': entity.id }) }}">
                            {{ entity.meta }}
                        </a>
                    </td>
                    <td class="width-10 enlace" >
                        <a href="{{ path('proyectosproductos_edit', { 'id': entity.id }) }}">
                            {{ entity.cantidad }}
                        </a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('proyectosproductos_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('proyectosproductos_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
</div>
<a href="{{ path('proyectosproductos_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}