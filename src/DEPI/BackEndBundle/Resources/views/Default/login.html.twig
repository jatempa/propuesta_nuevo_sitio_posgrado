{% extends '::backendlayout.html.twig' %}

{% block header %}
    <div class="header">    
        <div class="units-row">
            <div class="units unit-50">
                <img src="{{ asset('bundles/portada/img/header.png') }}"/>
            </div>
            <div class="units unit-50">
              <div class="tituloAlogin">División de estudios de</div>
              <div class="tituloBlogin">Posgrado e Investigación</div>
          </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div id="contenido" class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                    <form action="{{ path('posgradmin_login_check') }}" method="post" class="forms forms-columnar">
                        <p>
                            <label for="username">Usuario:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="width-100" />
                        </p>
                        
                        <p>
                            <label for="password">Contraseña:</label>
                            <input type="password" id="password" name="_password" class="width-100" /> 
                            <input type="hidden" name="_target_path" value="/posgradmin" />
                        </p>
    
                        <p>
                            <button type="submit" class="btn btn-orange">Entrar</button>
                        </p>
                    </form>
                    <p>
                        {% if error %}
                            <div class="error">{{ error.message|trans({},'messages') }}</div>
                        {% endif %}
                    </p>
            </fieldset>
        </div>
    </div>
{% endblock %}