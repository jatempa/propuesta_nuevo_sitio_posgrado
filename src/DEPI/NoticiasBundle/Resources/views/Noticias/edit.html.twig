{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('noticias') }}">Noticias</a></li>
    <li><span>Actualizar noticias</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Noticias</legend>
                {{ form_start(edit_form, { 'attr': {'enctype': 'multipart/form-data', 'class': 'forms forms-columnar'} }) }}
                
                    <p>
                        {{ form_label(edit_form.titulo, 'Título *') }}
                        {{ form_widget(edit_form.titulo, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_label(edit_form.contenido, 'Contenido *') }}
                        {{ form_widget(edit_form.contenido, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(edit_form.fechaPublicacion, 'Fecha de publicación *') }}
                        {{ form_widget(edit_form.fechaPublicacion, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(edit_form.documento, 'Documento') }}
                        {{ entity.rutaDocumento }}
                        {{ form_widget(edit_form.documento, { 'attr': {'class': 'width-100'} }) }}
                        {{ form_errors(edit_form.documento) }}
                    </p>
                        
                    <p>
                         {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-blue'} }) }}
                    {{ form_end(edit_form) }}
                    </p>
            </fieldset>
        </div>
    </div>
</div>
<button class="btn btn-red">ELIMINAR</button>
{% endblock %}
