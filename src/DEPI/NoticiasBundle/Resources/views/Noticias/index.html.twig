{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><span>Noticias</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-centered unit-80">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Contenido</th>
                    <th>Fecha de publicación</th>
                    <th>Documento</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-20 enlace">
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" >
                            {{ entity.titulo }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" >
                            {{ entity.contenido }}
                        </a>
                    </td>
                    <td class="width-10 enlace">
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" >
                            {% if entity.fechaPublicacion %}
                                {{ entity.fechaPublicacion|date('Y-m-d') }}
                            {% endif %}
                        </a>
                    </td>
                    <td class="width-10 enlace">
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" >
                            {% if entity.rutaDocumento %}
                                {{ entity.rutaDocumento }}
                            {% else %}
                                Sin documento
                            {% endif %}
                        </a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('noticias_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
    <a href="{{ path('noticias_new') }}" class="btn btn-blue">Nuevo</a>
</div>
{% endblock %}
