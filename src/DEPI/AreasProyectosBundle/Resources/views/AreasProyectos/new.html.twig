{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
    <li><a href="{{ path('areasproyectos') }}">Áreas de investigación</a></li>
    <li><span>Registrar área de investigación para un proyecto</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Áreas de investigación y Proyectos</legend>
                {{ form_start(form, { 'action': path('areasproyectos_new'), 'method': 'POST', 'attr': {'enctype': 'multipart/form-data', 'class': 'forms forms-columnar'} }) }}
                    
                    <p>
                        {{ form_label(form.proyecto, 'Proyecto *') }}
                        {{ form_widget(form.proyecto, { 'attr': {'class': 'width-100'} }) }}
                    </p>                    

                    <p>
                        {{ form_label(form.area, 'Área de investigación *') }}
                        {{ form_widget(form.area, { 'attr': {'class': 'width-100'} }) }}
                {{ form_end(form) }}
                    </p>

                    <p>
                         <input type="submit" value="GUARDAR" class="btn btn-blue">
                    </p>
            </fieldset>
        </div>
    </div>
</div>
{% endblock %}
