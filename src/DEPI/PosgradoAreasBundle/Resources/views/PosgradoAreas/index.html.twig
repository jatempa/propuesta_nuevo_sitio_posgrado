{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('posgrados') }}">Posgrados</a></li>
    <li><span>Posgrado y Áreas de inv.</span></li>
{% endblock %}

{% block contenido %}
<aside class="unit-25 unit-padding">
    <h6>Opciones</h6>
    <nav class="nav-v">
        <ul>
            <li><a href="{{ path('posgradoalumnos') }}">Registro de alumnos</a></li>
            <li><span>Registrar área de investigación</span></li>
            <li><a href="{{ path('posgradoinvestigadores') }}">Registro de investigadores</a></li>
            <li><a href="{{ path('posgradolineas') }}">Registro de lineas de investigación</a></li>
        </ul>
    </nav>
</aside>

<div class="unit-75">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Posgrados</th>
                    <th>Áreas de investigación</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-40 enlace" >
                        <a href="{{ path('posgradoareas_edit', { 'id': entity.id }) }}">
                            {{ entity.nom_posgrado }}
                        </a>
                    </td>
                    <td class="width-40 enlace" >
                        <a href="{{ path('posgradoareas_edit', { 'id': entity.id }) }}">
                            {{ entity.nom_area }}
                        </a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('posgradoareas_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('posgradoareas_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
</div>
<a href="{{ path('posgradoareas_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}
