{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('posgrados') }}">Posgrados</a></li>
    <li><a href="{{ path('posgradoareas') }}">Posgrado y Áreas de inv.</a></li>
    <li><span>Registro de un área de investigación en un posgrado</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Posgrado y Áreas de investigación</legend>
                {{ form_start(form, { 'action': path('posgradoareas_new'), 'method': 'POST', 'attr': {'enctype': 'multipart/form-data', 'class': 'forms forms-columnar'} }) }}                    
                    <p>
                        {{ form_label(form.posgrado, 'Posgrado *') }}
                        {{ form_widget(form.posgrado, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.area, 'Áreas de invest. *') }}
                        {{ form_widget(form.area, { 'attr': {'class': 'width-100'} }) }}
                {{ form_end(form) }}
                    </p>
                    
                    <p>
                         <input type="submit" value="GUARDAR" class="btn btn-blue">
                    </p>
            </fieldset>
        </div>
    </div>
</div>
{% endblock %}
