{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><span>Posgrados</span></li>
{% endblock %}

{% block contenido %}
<aside class="unit-25 unit-padding">
    <h6>Opciones</h6>
    <nav class="nav-v">
        <ul>
            <li><a href="{{ path('posgradoalumnos') }}">Registro de alumnos</a></li>
            <li><a href="{{ path('posgradoareas') }}">Registrar área de investigación</a></li>
            <li><a href="{{ path('posgradoinvestigadores') }}">Registro de investigadores</a></li>
            <li><a href="{{ path('posgradolineas') }}">Registro de lineas de investigación</a></li>
        </ul>
    </nav>
</aside>

<div class="unit-75">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Objetivo general</th>
                    <th>Clave</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-40 enlace">
                        <a href="{{ path('posgrados_edit', { 'id': entity.id }) }}" >
                            {{ entity.nombre }}
                        </a>
                    </td>
                    <td class="width-40 enlace">
                        <a href="{{ path('posgrados_edit', { 'id': entity.id }) }}" >
                            {{ entity.objetivoGeneral }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('posgrados_edit', { 'id': entity.id }) }}" >
                            {{ entity.clave }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
</div>
<a href="{{ path('posgrados_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}
