{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('posgrados') }}">Posgrados</a></li>
    <li><span>Agregar una nueva área de posgrado</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Área de posgrado</legend>
                {{ form_start(form, { 'action': path('posgradoareas_new'), 'method': 'POST', 'attr': {'enctype': 'multipart/form-data', 'class': 'forms forms-columnar'} }) }}
                    
                    <p>
                        {{ form_label(form.nombre, 'Nombre *') }}
                        {{ form_widget(form.nombre, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.objetivoGeneral, 'Objetivo General') }}
                        {{ form_widget(form.objetivoGeneral, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.clave, 'Clave') }}
                        {{ form_widget(form.clave, { 'attr': {'class': 'width-100'} }) }}
                    <h6>{{ form_errors(form.clave) }}</h6>
                {{ form_end(form) }}
                    </p>

                    <p>
                         <input type="submit" value="GUARDAR" class="btn btn-blue">
                    </p>
            </fieldset>
        </div>
    </div>
</div>
{% endblock %}
