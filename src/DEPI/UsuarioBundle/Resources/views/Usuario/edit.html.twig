{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('usuario') }}">Usuario</a></li>
    <li><span>Actualizar datos del usuario</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Usuario</legend>
                
                {{ form_start(form, {  'attr': { 'class': 'forms forms-columnar' } }) }}                    
                    <p>
                        {{ form_label(form.nombre, 'Nombre(s) *') }}
                        {{ form_widget(form.nombre, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                    
                    <p>
                        {{ form_label(form.apellidos, 'Apellidos *') }}
                        {{ form_widget(form.apellidos, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_label(form.email, 'Correo electr√≥nico *') }}
                        {{ form_widget(form.email, { 'attr': {'class': 'width-100'} }) }}
                    </p>

                    <p>
                        {{ form_label(form.password, 'Password *') }}
                        {{ form_widget(form.password, { 'attr': {'class': 'width-100'} }) }}
                        {{ form_errors(form.password) }}
                    </p>

                    <p>
                        {{ form_label(form.roles, 'Rol *') }}
                        {{ form_widget(form.roles, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_rest(form) }}    
                    </p>
                {{ form_end(form) }}
            </fieldset>
        </div>
    </div>
</div>
{% endblock %}
