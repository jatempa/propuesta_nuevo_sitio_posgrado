{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
    <li><span>Alumnos y Proyectos</span></li>
{% endblock %}

{% block contenido %}
<aside class="unit-25 unit-padding">
    <h6>Opciones</h6>
    <nav class="nav-v">
        <ul>
            <li><span>Registro de alumnos</span></li>
            <li><a href="{{ path('investigadorproyecto') }}">Registro de investigadores</a></li>
            <li><a href="{{ path('proyectosproductos') }}">Registro de productos académicos</a></li>
            <li><a href="{{ path('areasproyectos') }}">Registrar área de investigación</a></li>
        </ul>
    </nav>
</aside>

<div class="unit-75">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>No Control</th>
                    <th>Alumno</th>
                    <th>Proyecto</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in alumnosenproyectos %}
                <tr>
                     <td class="width-10 enlace">
                        <a href="{{ path('alumnosproyectos_edit', { 'id': entity.id }) }}">
                            {{ entity.noControl }}
                        </a>
                    </td>
                    <td class="width-40 enlace">
                        <a href="{{ path('alumnosproyectos_edit', { 'id': entity.id }) }}">
                            {{ entity.nombre ~ " " ~ entity.apellidoPaterno  ~ " " ~ entity.apellidoMaterno }}
                        </a>
                    </td>
                    <td class="width-30 enlace">
                        <a href="{{ path('alumnosproyectos_edit', { 'id': entity.id }) }}">
                            {{ entity.nombreCorto }}
                        </a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('alumnosproyectos_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('alumnosproyectos_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(alumnosenproyectos) }}
</div>
<a href="{{ path('alumnosproyectos_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}