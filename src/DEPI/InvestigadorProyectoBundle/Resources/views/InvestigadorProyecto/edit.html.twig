{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
    <li><a href="{{ path('investigadorproyecto') }}">Investigadores y Proyectos</a></li>
    <li><span>Actualizar datos de investigadores en un proyecto</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Áreas de investigación y Proyectos</legend>
                {{ form_start(form, { 'attr': {'class': 'forms forms-columnar'} }) }}
                    
                    <p>
                        {{ form_label(form.proyecto, 'Proyecto *') }}
                        {{ form_widget(form.proyecto, { 'attr': {'class': 'width-100'} }) }}
                    </p>  
                    
                    <p>
                        {{ form_label(form.investigadores, 'Investigador *') }}
                        {{ form_widget(form.investigadores, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_rest(form) }}    
                    </p>
                {{ form_end(form) }}
            </fieldset>
        </div>
    </div>
</div>
<a class="btn btn-red" href="{{ path('investigadorproyecto_delete', { 'id': entity.id }) }}">Eliminar</a>
{% endblock %}