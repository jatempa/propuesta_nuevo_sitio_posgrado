{% extends '::backend.html.twig' %}

{% block menu %}
    <li><a href="{{ path('noticias') }}">Noticias</a></li>
    <li><span>Portada</span></li>
    <li><a href="{{ path('alumnos') }}">Alumnos</a></li>
    <li><a href="{{ path('areas') }}">Áreas de inv.</a></li>
    <li><a href="{{ path('investigadores') }}">Investigadores</a></li>
    <li><a href="{{ path('lineas') }}">Líneas de inv.</a></li>
    <li><a href="{{ path('productosacademicos') }}">Prod. académicos</a></li>
    <li><a href="{{ path('posgrados') }}">Posgrados</a></li>
    <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
{% endblock %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><span>Portada</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-centered unit-80">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Fecha de publicación</th>
                    <th>Imagen</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-20 enlace">
                        <a href="{{ path('portada_edit', { 'id': entity.id }) }}" >
                            {{ entity.titulo }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('portada_edit', { 'id': entity.id }) }}" >
                            {% if entity.fechaPublicacion %}
                                {{ entity.fechaPublicacion|date('Y-m-d') }}
                            {% endif %}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('portada_edit', { 'id': entity.id }) }}" >
                            <img id="forBanner" src="{{ asset('uploads/images/portada/') ~ entity.imagenBanner }}" />
                        </a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('portada_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('portada_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
    <a href="{{ path('portada_new') }}" class="btn btn-blue">Nuevo</a>
</div>
{% endblock %}
