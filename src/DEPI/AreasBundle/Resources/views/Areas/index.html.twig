{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><span>Áreas</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-40 enlace">
                        <a href="{{ path('areas_edit', { 'id': entity.id }) }}">{{ entity.nombre }}</a>
                    </td>
                    <td  class="width-40 enlace">
                        <a href="{{ path('areas_edit', { 'id': entity.id }) }}">{{ entity.descripcion }}</a>
                    </td>
                    <td class="width-10"> 
                        <a href="{{ path('areas_edit', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/editar.svg') }}" alt="Editar">
                        </a>
                    </td>
                    <td class="width-10">
                        <a href="{{ path('areas_delete', { 'id': entity.id }) }}" >
                            <img id="action" src="{{ asset('bundles/backend/img/eliminar.svg') }}" alt="Eliminar">
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {{ knp_pagination_render(entities) }}
</div>
<a href="{{ path('areas_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}