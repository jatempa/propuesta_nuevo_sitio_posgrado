{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><a href="{{ path('areas') }}">Áreas</a></li>
    <li><span>Actualizar datos del área de investigación</span></li>
{% endblock %}

{% block contenido %}
<div class="unit-100">
    <div class="units-row">
        <div class="unit-centered unit-50">
            <fieldset>
                <legend>Áreas</legend>
                {{ form_start(form, { 'attr': {'class': 'forms forms-columnar'} }) }}
                
                    <p>
                        {{ form_label(form.nombre, 'Nombre *') }}
                        {{ form_widget(form.nombre, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_label(form.descripcion, 'Descripción') }}
                        {{ form_widget(form.descripcion, { 'attr': {'class': 'width-100'} }) }}
                    </p>
                        
                    <p>
                        {{ form_rest(form) }}    
                    </p>
                {{ form_end(form) }}
            </fieldset>
        </div>
    </div>
</div>
<a class="btn btn-red" href="{{ path('areas_delete', { 'id': entity.id }) }}">Eliminar</a>
{% endblock %}